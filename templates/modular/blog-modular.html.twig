{% import "macros/bootstrap_tools.html.twig" as bsTools %}

<div class="modular-row blog-modular {{ bsTools.style(page.header.style) }} {{ page.header.classes}}">
  <div class="container">
    <div class="row">
      <div class="col-12 text-{{ page.header.text_align|defined('center') }}">
        {{ content }}
      </div>
      <div class="col-12">
        <div class="card-columns">
        {% for page in page.collection() %}
          {% include '/partials/partial_blog_item.html.twig' with { 'page':page } %}
        {% endfor %}
        </div>
      </div>
      {% if page.header.show_more %}
        {% set show_more_page = page.find(page.header.show_more) %}
        <div class="col-sm-12 text-center">
          <a href="{{ show_more_page.url(true) }}" class="btn btn-lg {{ bsTools.buttonStyle(page.header.style|defined('light'), true, true) }}">
            {{ 'MODULAR.SEE_MORE_IN'|t(show_more_page.title) }}
          </a>
        </div>
      </div>
      {% endif %}
  </div>
</div>
